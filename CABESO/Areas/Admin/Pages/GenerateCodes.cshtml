@page
@model GenerateCodesModel
@{
    ViewData["Title"] = "Registrierungscodes generieren";
}

<h2>@ViewData["Title"]</h2>

<h4>Neue Codes generieren:</h4>
<form method="post">
    <div class="form-group">
        <label asp-for="Input.Number"></label>
        <input type="number" value="1" min="1" max="100" asp-for="Input.Number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Input.Role"></label>
        <select asp-for="Input.Role" class="form-control">
            @foreach (string role in Database.Roles)
            {
                <option value="@role">@Program.Translations.GetValueOrDefault(role)</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Generieren</button>
</form>
<br />

<h4>Derzeit aktive Codes:</h4>
<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Erstellungsdatum</th>
            <th>Rolle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (RegistrationCode code in Model.Codes)
        {
            <tr>
                <td><font face="monospace">@code.Code</font></td>
                <td>@Program.TimeDisplay(code.CreationTime)</td>
                <td>@Program.Translations.GetValueOrDefault(code.Role)</td>
                <td>
                    <a asp-controller="Admin" asp-action="DeactivateCode" asp-route-code="@code.Code">Deaktivieren</a>
                </td>
            </tr>
        }
    </tbody>
</table>