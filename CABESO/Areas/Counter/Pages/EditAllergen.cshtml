@page
@model EditAllergenModel
@{
    ViewData["Title"] = "Allergen bearbeiten";
    ViewData["ActivePage"] = "EditAllergen";
}

<form method="post">
    <h4>@ViewData["Title"]: @EditAllergenModel.CurrentAllergen?.Description</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Description"></label>
        <input asp-for="Input.Description" class="form-control" value="@EditAllergenModel.CurrentAllergen.Description" />
    </div>
    <button type="submit" class="btn btn-primary">Änderungen speichern</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}