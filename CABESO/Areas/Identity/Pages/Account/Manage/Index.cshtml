@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label>Vorname</label>
            <input value="@Model.CurrentUser.GetName().FirstName" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label>Nachname</label>
            <input value="@Model.CurrentUser.GetName().LastName" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label>E-Mail-Adresse</label>
            <input value="@Model.CurrentUser.Email" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label>Rolle</label>
            <input value="@Program.Translations.GetValueOrDefault(Model.CurrentUser.GetRoleName())" class="form-control" disabled />
        </div>
        @if (Model.CurrentUser.GetForm() != null)
        {
            <div class="form-group">
                <label>Klasse</label>
                <input value="@Model.CurrentUser.GetForm().ToString()" class="form-control" disabled />
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}