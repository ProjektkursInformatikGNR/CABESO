@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.UserEntity.Name.FirstName">Vorname</label>
            <input asp-for="Input.UserEntity.Name.FirstName" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Input.UserEntity.Name.LastName">Nachname</label>
            <input asp-for="Input.UserEntity.Name.LastName" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Input.Email">E-Mail</label>
            <input asp-for="Input.Email" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Input.UserEntity.Roles">
                @if (Model.Input.UserEntity.Roles.Length > 1)
                {
                    <text>Rollen</text>
                }
                else
                {
                    <text>Rolle</text>
                }
            </label>
            <input value="@string.Join(", ", Array.ConvertAll(Model.Input.UserEntity.Roles, s => Program.Translations[s]))" class="form-control" disabled />
        </div>
        @if (!string.IsNullOrEmpty(Model.Input.UserEntity.Form))
        {
            <div class="form-group">
                <label asp-for="Input.UserEntity.Form">Klasse</label>
                <input asp-for="Input.UserEntity.Form" class="form-control" disabled />
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}